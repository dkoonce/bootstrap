#Install helm
HELM_VERSION=3.7.0
wget https://get.helm.sh/helm-v${HELM_VERSION}-linux-amd64.tar.gz
tar xzf helm-v${HELM_VERSION}-linux-amd64.tar.gz
sudo install -o root -m 0755 linux-amd64/helm /usr/local/bin/
rm -rf linux-amd64 helm-v${HELM_VERSION}-linux-amd64.tar.gz
#echo "source <(helm completion bash)" | sudo tee /usr/local/share/bash-completion/completions/helm
